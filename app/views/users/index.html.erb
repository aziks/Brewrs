<div class="container">
<h1 class="title is-1">Listing Users</h1>
<hr>
</div>

<div class="columns is-multiline is-mobile">
  
  <% @users.each do |user| %>
   
    <div class="column is-quarter">
      <div class="box">
       <a class="subtitle is-text-centered" href="<%= user_path(user.id) %>"> <%= user.name %> </a>
        </br>
        </br>
        <div class="container">
            <a href="<%= user_path(user.id) %>" >
              <%= image_tag user.avatar.url(:medium) %>
            </a>
        </div>
      </div>
    </div>
    
 <% end %>

</div>    
        
