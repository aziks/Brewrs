<div class="columns is-mobile">
  <div class="column is-half is-offset-quarter">

    <h1 class="title is-1">Log in</h1>
    <hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
  <p class="control has-icon">
  <input class="input" autofocus="autofocus" type="email" name="user[email]" required>
  <i class="fa fa-envelope"></i>
  </p>
  <p class="control has-icon">
  <input class="input" autocomplete="off" type="password" name="user[password]" required>
  <i class="fa fa-lock"></i>
  </p>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <p class="control">
  <button class="button is-success" type="submit" name="commit" value="Log in">
    Login
  </button>
  </p>

<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>