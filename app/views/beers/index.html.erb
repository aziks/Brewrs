<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      
      <tr>
        <td> <a href="<%= user_beer_path(@user,beer) %>"> <%= beer.name %> </a> </td>
        
        <% if current_user %>
        <td><%= link_to 'Edit', edit_user_beer_path(@user,beer) %></td>
        <td><%= link_to 'Destroy', user_beer_path(@user,beer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to users index', users_path %>
